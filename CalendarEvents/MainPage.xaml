<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarEvents.MainPage"
             Title="Calendar Events">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
            ColumnDefinitions="170, 170"
            RowSpacing="10"
            ColumnSpacing="10"
            Margin="10">
            
            <Label
                Grid.Row="0"
                Grid.Column="0"
                HorizontalOptions="Start"
                Text="Search for:">
            </Label>

            <Entry
                x:Name="entSearchWord"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalOptions="Start">
            </Entry>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalOptions="Start"
                Text="Number of days in the past:">
            </Label>

            <Entry
                x:Name="entNumDaysPast"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalOptions="Start"
                Text="0">
            </Entry>
            
            <Label
                Grid.Row="2"
                Grid.Column="0"
                HorizontalOptions="Start"
                Text="Number of days in the future:">
            </Label>

            <Entry
                x:Name="entNumDaysFuture"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalOptions="Start"
                Text="0">
            </Entry>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                Text="Get calendar events"
                Clicked="OnGetCalendarEventsClicked">
            </Button>

            <Button
                Grid.Row="4"
                Grid.Column="0"
                Text="Copy to clipboard"
                HorizontalOptions="Center"
                Clicked="OnClipboardButtonClicked">
            </Button>
            
            <Button
                Grid.Row="4"
                Grid.Column="1"
                Text="Share calendar events"
                HorizontalOptions="Center"
                Clicked="OnButtonShareClicked">
            </Button>
            
            <Label
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                x:Name="lblCalendarEvents"
                HorizontalOptions="Center">
            </Label>

        </Grid>
    </ScrollView>

</ContentPage>
