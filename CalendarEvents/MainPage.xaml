<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalendarEvents"
             x:Class="CalendarEvents.MainPage"
             NavigationPage.HasBackButton="False"
             Loaded="OnPageLoaded"
             Appearing="OnPageAppearing">

    <NavigationPage.TitleView>
        <Label
            Style="{StaticResource labelStyleTitleView}"
            Text="{local:Translate ProgramName_Text}">
        </Label>
    </NavigationPage.TitleView>
    
    <ScrollView>
        <StackLayout>
            <Grid
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                ColumnDefinitions="170, 130*"
                ColumnSpacing="5"
                RowSpacing="5"
                Margin="5">
            
                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Search for:">
                </Label>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="1"
>
                    <Entry
                        x:Name="entSearchWord"
                        Style="{StaticResource entryStyleDefault}"
                        HorizontalOptions="Fill"
                        Text=""
                        Completed="GoToNextField"
                        Focused="EntryFocused">
                    </Entry>
                </Border>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Number of days in the past:">
                </Label>

                <Border
                    x:Name="brdNumDaysPast"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="1"
                    Grid.Column="1">

                    <Entry
                        x:Name="entNumDaysPast"
                        Style="{StaticResource entryStyleNumericNext}"
                        Text="0"
                        Placeholder="0 - 4000"
                        MaxLength="4"
                        Completed="GoToNextField"
                        Focused="EntryFocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:NumericValidationTriggerAction MinValue="0" MaxValue="4000" BorderName="brdNumDaysPast"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>
           
                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Number of days in the future:">
                </Label>

                <Border
                    x:Name="brdNumDaysFuture"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="2"
                    Grid.Column="1">

                    <Entry
                        x:Name="entNumDaysFuture"
                        Style="{StaticResource entryStyleNumericDone}"
                        Text="31"
                        Placeholder="0 - 4000"
                        MaxLength="4"
                        Completed="GoToNextField"
                        Focused="EntryFocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:NumericValidationTriggerAction MinValue="0" MaxValue="4000" BorderName="brdNumDaysFuture"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Button
                    x:Name="btnGetCalendarEvents"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Get events"
                    Clicked="OnGetCalendarEventsClicked">
                </Button>

                <Button
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="Clear events"
                    Clicked="OnClearEventsClicked">
                </Button>

                <Button
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Copy events"
                    Clicked="OnClipboardButtonClicked">
                </Button>
            
                <Button
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="Share events"
                    Clicked="OnButtonShareClicked">
                </Button>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                
                    <Label
                        x:Name="lblCalendarNames"
                        Style="{StaticResource labelStyleDefault}"
                        IsVisible="False">
                    </Label>
                </Border>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                
                    <Label
                        x:Name="lblCalendarEvents"
                        Style="{StaticResource labelStyleDefault}">
                    </Label>
                </Border>

            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>
