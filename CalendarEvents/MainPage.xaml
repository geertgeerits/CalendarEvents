<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalendarEvents"
             x:Class="CalendarEvents.MainPage"
             NavigationPage.HasBackButton="False"
             Loaded="OnPageLoaded"
             Appearing="OnPageAppearing">

    <NavigationPage.TitleView>
        <Grid RowDefinitions="40"
              ColumnDefinitions="60, 230*, 50"
              Margin="5"
              BackgroundColor="Gold">

            <ImageButton
                x:Name="imgbtnAbout"
                Grid.Row="0"
                Grid.Column="0"
                Source="info_32p.png"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                HeightRequest="32"
                WidthRequest="32"
                ToolTipProperties.Text="{local:Translate Info_Text}"
                Clicked="OnPageAboutClicked">
            </ImageButton>

            <Label
                Style="{StaticResource labelStyleTitleView}"
                Grid.Row="0"
                Grid.Column="1"
                FontSize="20"
                Text="{local:Translate ProgramName_Text}">
            </Label>

            <ImageButton
                x:Name="imgbtnSettings"
                Grid.Row="0"
                Grid.Column="2"
                Source="settings_32p.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="32"
                WidthRequest="32"
                ToolTipProperties.Text="{local:Translate Settings_Text}"
                Clicked="OnPageSettingsClicked">
            </ImageButton>
        </Grid>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout>
            <Grid
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                ColumnDefinitions="170, 130*"
                ColumnSpacing="5"
                RowSpacing="5"
                Margin="5">
            
                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="{local:Translate SearchFor_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="1"
>
                    <Entry
                        x:Name="entSearchWord"
                        Style="{StaticResource entryStyleDefault}"
                        HorizontalOptions="Fill"
                        Text=""
                        Completed="GoToNextField"
                        Focused="EntryFocused">
                    </Entry>
                </Border>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="{local:Translate NumDaysPast_Text}">
                </Label>

                <Border
                    x:Name="brdNumDaysPast"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="1"
                    Grid.Column="1">

                    <Entry
                        x:Name="entNumDaysPast"
                        Style="{StaticResource entryStyleNumericNext}"
                        Text="0"
                        Placeholder="0 - 4000"
                        MaxLength="4"
                        Completed="GoToNextField"
                        Focused="EntryFocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:NumericValidationTriggerAction MinValue="0" MaxValue="4000" BorderName="brdNumDaysPast"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>
           
                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="{local:Translate NumDaysFuture_Text}">
                </Label>

                <Border
                    x:Name="brdNumDaysFuture"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="2"
                    Grid.Column="1">

                    <Entry
                        x:Name="entNumDaysFuture"
                        Style="{StaticResource entryStyleNumericDone}"
                        Text="31"
                        Placeholder="0 - 4000"
                        MaxLength="4"
                        Completed="GoToNextField"
                        Focused="EntryFocused">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <local:NumericValidationTriggerAction MinValue="0" MaxValue="4000" BorderName="brdNumDaysFuture"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Button
                    x:Name="btnGetEvents"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="{local:Translate EventsGet_Text}"
                    Clicked="OnGetEventsClicked">
                </Button>

                <Button
                    x:Name="btnClearEvents"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="{local:Translate EventsClear_Text}"
                    Clicked="OnClearEventsClicked">
                </Button>

                <Button
                    x:Name="btnCopyEvents"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="{local:Translate EventsCopy_Text}"
                    Clicked="OnClipboardButtonClicked">
                </Button>
            
                <Button
                    x:Name="btnShareEvents"
                    Style="{StaticResource buttonStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Text="{local:Translate EventsShare_Text}"
                    Clicked="OnButtonShareClicked">
                </Button>

                <Border
                    x:Name="brdCalendarNames"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    IsVisible="False">
                
                    <Label
                        x:Name="lblCalendarNames"
                        Style="{StaticResource labelStyleDefault}"
                        IsVisible="False">
                    </Label>
                </Border>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                
                    <Label
                        x:Name="lblCalendarEvents"
                        Style="{StaticResource labelStyleDefault}">
                    </Label>
                </Border>

            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>
